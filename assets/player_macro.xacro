<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="player" params="name color">
    <link name="${name}">
      <visual>
        <origin xyz="-0.015 0.000 0.300"/>
        <geometry>
          <box size="0.130 0.200 0.600"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin xyz="-0.015 0.000 0.300"/>
        <geometry>
          <box size="0.130 0.200 0.600"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="-0.015 0.000 0.300"/>
        <mass value="4"/>
        <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.08"/>
      </inertial>
    </link>
    <link name="${name}_x"/>
    <link name="${name}_y"/>

    <xacro:player_foot name="${name}_right_foot"/>
    <xacro:player_foot name="${name}_left_foot"/>

    <joint name="${name}_x_joint" type="prismatic">
      <axis xyz="1 0 0"/>
      <parent link="field"/>
      <child link="${name}_x"/>
    </joint>

    <joint name="${name}_y_joint" type="prismatic">
      <axis xyz="0 1 0"/>
      <parent link="${name}_x"/>
      <child link="${name}_y"/>
    </joint>

    <joint name="${name}_joint" type="continuous">
      <axis xyz="0 0 1"/>
      <parent link="${name}_y"/>
      <child link="${name}"/>
    </joint>

    <joint name="${name}_right_foot_joint" type="revolute">
      <axis xyz="0 -1 0"/>
      <parent link="${name}"/>
      <child link="${name}_right_foot"/>
      <origin xyz="0.070 -0.055 0.250"/>
    </joint>

    <joint name="${name}_left_foot_joint" type="revolute">
      <axis xyz="0 -1 0"/>
      <parent link="${name}"/>
      <child link="${name}_left_foot"/>
      <origin xyz="0.070 0.055 0.250"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="player_foot" params="name">
    <link name="${name}">
      <visual>
        <origin xyz="0.000 0.000 -0.120"/>
        <geometry>
          <box size="0.020 0.090 0.240"/>
        </geometry>
        <material name="yellow"/>
      </visual>
      <collision>
        <origin xyz="0.000 0.000 -0.120"/>
        <geometry>
          <box size="0.020 0.090 0.240"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
      </inertial>
    </link>
  </xacro:macro>
</robot>
